{
  "manifest_version": 3,
  "name": "LinkedIn Social Assistant",
  "version": "0.1.0",
  "permissions": ["storage", "clipboardWrite"],
  "host_permissions": ["https://www.linkedin.com/*", "http://localhost:8000/*"],
  "background": { "service_worker": "background.js", "type": "module" },

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/feed/*"],
      "exclude_matches": ["https://www.linkedin.com/feed/update/*"],
      "js": ["assets/feed.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.linkedin.com/feed/update/*",
        "https://www.linkedin.com/posts/*"
      ],
      "js": ["assets/post.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.linkedin.com/in/*",
        "https://www.linkedin.com/company/*",
        "https://www.linkedin.com/organization/*"
      ],
      "js": ["assets/profile.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    { "resources": ["assets/*", "*.css"], "matches": ["<all_urls>"] }
  ]
}
